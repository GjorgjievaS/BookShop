@model BookShop.Domain.DomainModels.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <div class="container" style="background-color: #efefef">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookName)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.BookName)*@
                <h4>@Model.BookName</h4>
            </dd>
            <dt class="col-sm-2">
               @Html.DisplayNameFor(model => model.BookImage)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.BookImage)*@
                <img src="@Model.BookImage" style="overflow: hidden; height:300px" alt="Image for book!" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookAuthor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookAuthor)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Published)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Published)*@
                <p>@Model.Published.ToString("yyyy")</p>
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
        </dl>
    </div>
    </div>
<div>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    @if (User.IsInRole("Administrator")) {
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> 
    }

    <a asp-action="Index">Back to List</a>
</div>